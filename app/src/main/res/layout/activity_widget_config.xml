<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/clConfigMain"
    tools:context=".WidgetConfigActivity">
    <FrameLayout android:layout_width="match_parent"
                 android:layout_height="250dp"
    android:id="@+id/flPreview">
        <ImageView android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:id="@+id/ivWidgetPreviewBg"
                   android:src="@android:color/transparent"/>
        <ImageView android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:id="@+id/ivWidgetPreview"
                      android:layout_margin="16dp"/>
    </FrameLayout>
    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@+id/flPreview"
        app:layout_constraintBottom_toBottomOf="parent"
    android:background="@color/widget_white_bgColor">
        <LinearLayout
                android:layout_width="match_parent"

                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:id="@+id/llWidgetBackground"
                style="@style/SettingsRowStyle">
            <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/widget_background_settings"
                    android:gravity="center_vertical"
                    android:layout_weight="1"/>
            <Switch
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:id="@+id/cbWidgetBackground"
                    android:focusable="false"
                    android:clickable="false"
                    android:focusableInTouchMode="false"/>
        </LinearLayout>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:id="@+id/llBackgroundTransparency"
                style="@style/SettingsRowStyle"
                app:layout_constraintTop_toBottomOf="@+id/llWidgetBackground"
                android:background="@android:color/transparent"
                android:orientation="vertical">
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/widget_transparency_settings"
                    android:gravity="center_vertical"/>
            <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <SeekBar
                        android:layout_width="match_parent"
                        android:max="255"
                        android:layout_height="wrap_content"
                        android:id="@+id/sbWidgetTransparency"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Transparent"
                        app:layout_constraintTop_toBottomOf="@id/sbWidgetTransparency"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="No transparency"
                        app:layout_constraintTop_toBottomOf="@id/sbWidgetTransparency"
                        app:layout_constraintEnd_toEndOf="parent"/>
            </android.support.constraint.ConstraintLayout>
        </LinearLayout>
    </android.support.constraint.ConstraintLayout>
</android.support.constraint.ConstraintLayout>